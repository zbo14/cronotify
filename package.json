{
  "name": "cronotify",
  "version": "0.1.0",
  "description": "Easily write and schedule cron jobs with desktop notifications.",
  "module": "lib.ts",
  "type": "module",
  "keywords": [
    "cron",
    "cron job",
    "scheduling",
    "bun",
    "notifications",
    "desktop notifications"
  ],
  "scripts": {
    "start": "bun index.ts",
    "dev": "bun dev.ts",
    "format": "bunx @biomejs/biome format --write *.ts src"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "@types/bun": "latest",
    "@types/node-notifier": "^8.0.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "node-notifier": "^10.0.1"
  }
}